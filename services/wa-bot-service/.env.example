PORT=3000
BACKEND_API_URL=http://backend-api:8000
BACKEND_TIMEOUT_MS=60000
SESSION_ID=default
LOG_LEVEL=info

# ============================================
# Storage Configuration
# ============================================
# Options: 'minio' or 'local'
# - minio: Use MinIO/S3-compatible object storage
# - local: Use local filesystem storage
STORAGE_TYPE=minio

# ============================================
# MinIO Configuration (used when STORAGE_TYPE=minio)
# ============================================
MINIO_ENDPOINT=http://minio:9000
MINIO_REGION=us-east-1
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniopass
MEDIA_BUCKET=wa-media
MINIO_PUBLIC_URL=http://minio:9000/wa-media

# ============================================
# Local Storage Configuration (used when STORAGE_TYPE=local)
# ============================================
# Path where media files will be stored
LOCAL_STORAGE_PATH=./data/media
# URL prefix for accessing stored media (must match your server URL)
LOCAL_STORAGE_URL=http://localhost:3000/media
